{
  "name": "wordpress",
  "version": "0.0.0",
  "runtime": "wordpress:6.6-fpm-alpine",
  "handler": "localhost:8080",
  "taskdir": "/var/www/html",
  "user": "www-data",
  "files": ["wp-config.php"],
  "packages": ["mysql-client"],
  "secrets": ["DB_PASSWORD"],
  "bin": {
    "index.php": "public/index.php",
    "wp": "bin/wp-cli.phar"
  },
  "scripts": {
    "start": "php -S localhost:8080 -t /var/www/html"
  },
  "schedules": {
    "@immediately": "wp db create || true"
  }
}
